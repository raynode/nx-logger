{
  "compilerOptions": {
    "declaration": true,
    "lib": ["es2016", "dom", "es7", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "outDir": "dist/",
    "removeComments": true,
    "rootDir": ".",
    "sourceMap": true,
    "target": "es5"
  },
  "include": [
    "src/**/*.ts",
    "__tests__/**/*.ts",
    "node_modules/@types"
  ]
}
