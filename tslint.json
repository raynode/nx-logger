{
  "defaultSeverity": "error",
  "extends": ["tslint:latest"],
  "jsRules": {},
  "rules": {
    // the server is allowed to use console.log, but is discuraged, use debug instead
    "no-console": false,
    // this enforces the habit to use types
    "arrow-parens": [true, "ban-single-arg-parens"],
    // this ... just no
    "curly": [true, "as-needed"],
    // why would you...
    "interface-name": [true, "never-prefix"],
    // This rule enforces objects to always have keys in alphabetical order
    "object-literal-sort-keys": true,
    // use single quotes, but enforce double quotes in JSX
    "quotemark": [true, "single", "jsx-double"],
    // I prefer no semi colons :)
    "semicolon": [true, "never"],
    // allow whitespace on if
    "whitespace": [true,
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-type",
      "check-typecast",
      "check-preblock"
    ]
  },
  "rulesDirectory": [
    "src"
  ]
}
